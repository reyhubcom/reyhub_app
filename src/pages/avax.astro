---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

import Features2 from '~/components/widgets/Features2.astro';
import Features from '~/components/widgets/Features.astro';
import Stats from '~/components/widgets/Stats.astro';
import Features3 from '~/components/widgets/Features3.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Brands from '~/components/widgets/Brands.astro';

import { YouTube } from 'astro-embed';

const metadata = {
  title: 'Cosmos Staking',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline=""
     actions={[
      {
        variant: 'secondary',
        target: '_blank',
        text: 'Rocket',
        href: 'https://rocketpool.net/',
        icon: 'tabler:link',
      },
      {
        variant: 'secondary',
        target: '_blank',
        text: 'Lido.Fi',
        href: 'https://lido.fi/',
        icon: 'tabler:link',
      },
       {
        variant: 'secondary',
        target: '_blank',
        text: 'Velar',
        href: 'https://velar.com/',
        icon: 'tabler:link',
      },
       {
        variant: 'secondary',
        target: '_blank',
        text: 'Asigna',
        href: 'hhttps://www.asigna.io/',
        icon: 'tabler:link',
      },
       {
        variant: 'secondary',
        target: '',
        text: 'Exchange',
        href: '/exchange',
        icon: 'tabler:link',
      },
       
    ]}
  >
    <Fragment slot="title">
       <span class="hidden sm:inline"></span>  <span
        class="text-accent dark:text-white"></span
      >Cosmos Staking
    </Fragment>

    <Fragment slot="subtitle">
      <script defer src="https://www.livecoinwatch.com/static/lcw-widget.js"></script> <div class="livecoinwatch-widget-5" lcw-base="USD" lcw-color-tx="#0693e3" lcw-marquee-1="coins" lcw-marquee-2="movers" lcw-marquee-items="30" ></div>

<script async src="https://static.coinstats.app/widgets/coin-chart-widget.js"></script>
<coin-stats-chart-widget type="large" coin-id="avalanche-2" width="100%" chart-height="300" currency="USD" locale="en" bg-color="#040422" text-color="#FFFFFF" status-up-color="rgba(0,194,111,1)" status-down-color="#FE4747" buttons-color="#040422" chart-color="#00c26f" chart-gradient-from="rgba(6,13,79,0.07)" chart-gradient-to="rgba(255,255,255,0)" chart-label-background="#000000" candle-grids-color="rgba(255,255,255,0.1)" border-color="rgba(4,4,3,1)" font="Outfit, Arial, Helvetica" btc-color="rgba(212,131,0,1)" eth-color="rgba(122,21,197,1)"></coin-stats-chart-widget>
    </Fragment>

    <Fragment slot="image">
      
    </Fragment>
  </Hero>

  <!-- Features2 Widget ************** -->

  <Features2
    title="Stake Your Cosmos, Earn Reward"
    subtitle="CStaking Cosmos lets you earn rewards on your ATOM while also helping to secure the network. Create a Kraken account, stake your ATOM and earn up to 22% APR."
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Features2>

  <!-- Stats Widget ****************** -->

 
  
</Layout>
